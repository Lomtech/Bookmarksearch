{
  "manifest_version": 3,
  "name": "Bookmark Tagger with GPT",
  "version": "1.2",
  "description": "Erstellt automatisch Tags für Lesezeichen mit GPT und ermöglicht die Suche nach Tags.",
  "permissions": ["bookmarks", "storage"],
  "host_permissions": ["https://api.openai.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
